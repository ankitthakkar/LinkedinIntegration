<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sa.linkedinsample.MainActivity">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Email address:"
    android:id="@+id/txt_first_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/txt_first_name_value"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/txt_first_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:layout_below="@+id/txt_first_name"
        android:id="@+id/txt_last_name"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@+id/txt_last_name"
        android:layout_below="@+id/txt_first_name"
        android:layout_marginLeft="20dp"
        android:id="@+id/txt_last_name_value"
        android:layout_marginTop="20dp"/>

    <Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Login"
    android:id="@+id/btn_login"
    android:layout_below="@+id/txt_first_name"

    android:layout_marginTop="114dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Share"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_share"
        android:layout_below="@+id/btn_login"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Fetch Connections"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_fetch_connections"
        android:layout_below="@+id/btn_share"
        android:visibility="gone"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Open Current Profile"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_open_profile"
        android:layout_below="@+id/btn_fetch_connections"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Open User Profile"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_open_user_profile"
        android:layout_below="@+id/btn_open_profile"
        android:visibility="gone"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
